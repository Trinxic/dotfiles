music_directory "/mnt/hard_drive/Music"
db_file "~/.config/mpd/database"
auto_update "yes"

# Modularization
# include "other.conf"
# include_optional "may_not_exist.conf"

# prefetch queued song files before they are going to be played
input_cache {
    size "1 GB"
}

audio_output {
    type "pipewire"
    name "PipeWire Sound Server"
}
